        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Admin" asp-action="Dashboard"> <i class="fa fa-user"></i>&nbsp; Dashboard </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Admin" asp-action="Category"> <i class="fa fa-book"></i>&nbsp; Category </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Admin" asp-action="BlogPost"> <i class="fa fa-user"></i>&nbsp; BlogPost </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Admin" asp-action="Videos"> <i class="fa fa-user"></i>&nbsp; Videos </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Admin" asp-action="Music"> <i class="fa fa-music"></i>&nbsp; Music </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Admin" asp-action="Profile"> <i class="fa fa-user"></i>&nbsp; Profile </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Admin" asp-action="FAQs"> <i class="fa fa-question-circle"></i>&nbsp; FAQs </a>
