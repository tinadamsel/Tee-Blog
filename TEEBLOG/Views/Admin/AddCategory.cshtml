@model Core.Models.Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-top: 100px;"></div>
<div class="container-fluid" id="master">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-xm-12 col-md-12 col-lg-12 col-xl-12">
                <h4 class="font-weight-bold mx-3" style="color: #012970;">Add Category</h4>
                <ul class="breadcrumb bg-transparent justify-content-start font-weight-bold" style="color:#899bbd;">
                    <li class="breadcrumb-item">Category</li>
                    <li class="breadcrumb-item active" style="color: #51678f;">Add Category</li>
                </ul>
            </div>
        </div>
    </div>
    <br /> <br />

    <div class="container">
        <div class="row">
            @if (Model != null)
            {
                @if (Model.Error != null)
                {
                    <div class="col-sm-12 col-xm-12 col-md-9 col-lg-9 col-xl-9 m-auto">
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Error!</strong> &nbsp; @Model.Error
                        </div>
                    </div>
                }  
            } 

            @if (Model != null)
            {
                @if (Model.Success != null)
                {
                    <div class="col-sm-12 col-xm-12 col-md-9 col-lg-9 col-xl-9 m-auto">
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Success!</strong> &nbsp;@Model.Success
                        </div>
                    </div>
                }
            }

           <div class="mt-4" style="margin-top:10px;"></div>
            <div class="col-sm-12 col-xm-12 col-md-9 col-lg-9 col-xl-9 m-auto mt-4">
                <div class="card bg-white p-2"> 
                    <h3 class="h5 font-weight-bold my-3 text-center" style="color: #012970;"> Add Category </h3>
                    <form method="POST" asp-action="AddCategory">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control" required>
                        </div> <br />
                        <div class="center"> 
                            <button type="submit" class="btn btn-secondary w-25 p-2"> Add Category</button>
                            &nbsp;
                            <a class="btn btn-secondary w-25 p-2" asp-controller="Admin" asp-action="Category"> Back</a>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



