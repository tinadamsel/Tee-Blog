        <li class="nav-item">
            <a class="nav-link text-white" asp-controller="Account" asp-action="Login"> <i class="fa fa-sign-out"></i>&nbsp; Logout </a>
        </li>
    </ul>
</aside>
<div style="margin-top: 100px;"></div>
<div class="container-fluid" id="master">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-xm-12 col-md-12 col-lg-12 col-xl-12 m-auto">
                <ul class="breadcrumb bg-dark text-white justify-content-start">
                    <li class="breadcrumb-item">
                        <a class="text-white" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a class="text-white" asp-controller="Admin" asp-action="Category">Category</a>
                    </li>
                    <li class="breadcrumb-item active">
                        <a class="text-white" asp-controller="Admin" asp-action="AddCategory">Add Category</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <br /> <br />

    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-xm-12 col-md-9 col-lg-9 col-xl-9 m-auto">
                <div class="card bg-light p-2"> 
                    <h3 class="h5 font-weight-bold my-3 text-center"> Add Category </h3>
                    <form method="POST" asp-action="AddNewCategory">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control" required>
                        </div> <br />
                        <div class="center"> 
                            <button type="submit" class="btn btn-success w-25 p-2"> Add Category</button>
                            &nbsp;
                            <a class="btn btn-success w-25 p-2" asp-controller="Admin" asp-action="Category"> Back</a>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



