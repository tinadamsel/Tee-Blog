@model Core.Models.Video
@{
    ViewData["Title"] = "AddVideo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-top: 100px;"></div>
<div class="container-fluid" id="master">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-xm-12 col-md-12 col-lg-12 col-xl-12">
                <h4 class="font-weight-bold mx-3" style="color: #012970;">Add Video</h4>
                <ul class="breadcrumb bg-transparent justify-content-start font-weight-bold" style="color:#899bbd;">
                    <li class="breadcrumb-item">Videos</li>
                    <li class="breadcrumb-item active" style="color: #51678f;">Add Video</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-xm-12 col-md-8 col-lg-8 col-xl-8 m-auto">
                <div class="card p-4 bg-white rounded">
                    <h3 class="h5 font-weight-bold mt-3 text-center" style="color: #012970;"> Add Video </h3> <br />
                    <form method="POST" asp-action="AddNewVideo"> 
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input type="text" asp-for="Name" class="form-control" required />
                        </div>
                        @*<div class="form-group">
                            <label asp-for="ShortDescription"> Short Description </label>
                            <textarea id="summernote2" asp-for="ShortDescription" class="form-control"></textarea>
                        </div>*@
                        <div class="form-group">
                            <label asp-for="Link">Video</label>
                            <input type="text" asp-for="Link" class="form-control" required />
                        </div>
                        <div class="text-center justify-content-center">
                            <button type="submit" class="btn btn-primary w-25 p-2"> Add Video</button>
                            &nbsp;
                            <a class="btn btn-primary w-25 p-2" asp-controller="Blog" asp-action="AdminBlogpage"> Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



