@model Core.Models.Blog
@{
    ViewData["Title"] = "AddBlogPost";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-top: 100px;"></div>
<div class="container-fluid" id="master">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-xm-12 col-md-12 col-lg-12 col-xl-12">
                <h4 class="font-weight-bold mx-3" style="color: #012970;">Add BlogPost</h4>
                <ul class="breadcrumb bg-transparent justify-content-start font-weight-bold" style="color:#899bbd;">
                    <li class="breadcrumb-item">Blog Post</li>
                    <li class="breadcrumb-item active" style="color: #51678f;">Add BlogPost</li>
                </ul>
            </div>
        </div>
    </div>

   
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-xm-12 col-md-8 col-lg-8 col-xl-8 m-auto">
                    <div class="card p-4 bg-white rounded">
                        <h3 class="h5 font-weight-bold mt-3 text-center" style="color: #012970;"> Add BlogPost </h3> <br />
                        <div class="form-group">
                            <label for="Name">Name</label>
                            <input type="text" id="name" required class="form-control" />
                            <div id="nameError" class="error"></div>
                        </div>
                        <div class="form-group">
                            <label for="Category"> Category </label>
                            <select class="custom-select" id="categories" required asp-items="@(new SelectList(@ViewBag.Categories,  "Id", "Name" ))"></select>
                        </div>
                        <div class="form-group">
                            <label for="ShortDescription"> Short Description </label>
                            <textarea id="shortDes" rows="3" required class="form-control summernote"></textarea>
                            <div id="nameError" class="error"></div>

                        </div>
                        <div class="form-group">
                            <label for="Description"> Description </label>
                            <textarea id="blogContent" required class="form-control summernote"></textarea>
                            <div id="nameError" class="error"></div>
                        </div>
                        <div class="form-group">
                            <label for="Picture"> Picture</label>
                            <input type="file" id="picture" required class="form-control">
                            <div id="nameError" class="error"></div>
                        </div>
                        <div class="text-center justify-content-center">
                            <button type="submit" onclick="addblog()" class="btn btn-primary w-25 p-2"> Add Post</button>
                            <a class="btn btn-success w-25 p-2" asp-controller="Blog" asp-action="AdminBlogPage"> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<script>
    $(document).ready(function () 
    {
        debugger;
        $('.summernote').summernote({
            height: 300,
            placeholder: "Write your content here",
        });
    });
</script>



