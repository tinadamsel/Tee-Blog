@model IEnumerable<Core.Models.Blog>

@{
    ViewData["Title"] = "AdminBlogPage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-top: 100px;"></div>
<div class="container-fluid" id="master">
    <div class="container">
        <div class="row">
            <div class="col-6 float-left mt-2">
                <h4 class="font-weight-bold mx-3" style="color: #012970;">Blog Post</h4>
                <ul class="breadcrumb bg-transparent justify-content-start font-weight-bold mx-1" style="color:#899bbd;">
                    <li class="breadcrumb-item">Home</li>
                    <li class="breadcrumb-item active" style="color: #51678f;">Blog Post</li>
                </ul>
            </div>
            <div class="col-6 float-right">
                <div class="card p-2 bg-white">
                    <p class="p-3 text-center" style="color: #012970;">
                        <a asp-controller="Blog" asp-action="AddBlogPost" class="font-weight-bold" style="text-decoration: none; color: #012970;"> <i class="fa fa-plus"></i>&nbsp; Add Blog Post </a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <br /> <br />

    <div class="container table-responsive">
        <div class="card p-4 bg-white rounded">
            @if (Model.Count() > 0)
            {
                <table class="display table table-borderless" id="table-show" width="100%">
                <thead>
                    <tr>
                        <th> Name</th>
                        <th> Date Created</th>
                        <th> Category </th>
                        <th> Short Description </th>
                        @*<th> Description </th>*@
                        <th> Picture</th>
                        <th> Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var blog in Model)
                    {
                                                      
                            <tr>
                            <td width="5%">@blog.Name</td>
                            <td width="5%">@blog.DateCreated.ToString("D") </td>
                            <td width="5%">@blog.CategoryId </td>
                            <td width="40%">@Html.Raw(@blog.ShortDescription)</td> 
                            @*<td style="width:30%;">
                                <a asp-controller="Blog" asp-action="ShowBlogPage" asp-route-id="@blog.Id" class="font-weight-bold" style="text-decoration: none; color: black;"> Check Blog Post </a>
                            </td>*@
                            <td width="30%"><img src="@blog.Picture" style="width: 50px; height: 50px;"/></td>
                            <td width="10%">
                                <div class="w-75 btn-group">
                                   <a asp-controller="Blog" asp-route-id="@blog.Id" asp-action="Edit" class="btn btn-outline-secondary  mx-1" style="border-radius: 5px;"><i class="fa fa-edit"></i></a>
                                   <a asp-controller="Blog" asp-route-id="@blog.Id" asp-action="Delete" class="btn btn-outline-secondary  mx-1" style="border-radius: 5px;"><i class="fa fa-trash"></i></a>
                                   <a asp-controller="Blog" asp-action="ShowBlogPage" asp-route-id="@blog.Id" class="btn btn-outline-secondary mx-1" style="border-radius: 5px; font-family:'Times New Roman';"> Post </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p> No Blog Post added </p>
        }
        </div>
    </div>

</div>




