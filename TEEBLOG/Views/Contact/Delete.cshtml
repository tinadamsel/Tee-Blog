@model Core.ViewModels.SupportViewModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="margin-top: 100px;"></div>
<div class="container-fluid" id="master">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-xm-12 col-md-12 col-lg-12 col-xl-12">
                <h4 class="font-weight-bold mx-3" style="color: #012970;">Delete Contact</h4>
                <ul class="breadcrumb bg-transparent justify-content-start font-weight-bold" style="color:#899bbd;">
                    <li class="breadcrumb-item">Contact</li>
                    <li class="breadcrumb-item active" style="color: #51678f;">Delete Contact</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-xm-12 col-md-8 col-lg-8 col-xl-8 m-auto">
                <div class="card p-4 bg-white rounded">
                    <h3 class="h5 font-weight-bold mt-3 text-center" style="color: #012970;"> Delete Contact </h3> <br />
                    <form method="POST" asp-action="DeletePost">
                        <input asp-for="Id" hidden />
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input type="text" asp-for="Name" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input type="text" asp-for="Email" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Subject">Subject</label>
                            <input type="text" asp-for="Subject" class="form-control" disabled />
                        </div>
                        <div class="form-group">
                            <label asp-for="Message"> Message </label>
                            <textarea asp-for="Message" class=" form-control" disabled></textarea>
                        </div>
                        <div class="text-center justify-content-center">
                            <button type="submit" class="btn btn-primary w-25 p-2"> Delete Contact</button>
                            &nbsp;
                            <a class="btn btn-primary w-25 p-2" asp-controller="Contact" asp-action="AdminContactPage"> Back </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



